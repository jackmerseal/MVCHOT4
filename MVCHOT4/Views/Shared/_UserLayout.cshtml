@{
    Layout = "_Layout.cshtml";
    string c = ViewContext.RouteData.Values["controller"].ToString() ?? "";
    string a = ViewContext.RouteData.Values["action"].ToString() ?? "";
}

@section scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-info" data-bs-theme="dark">
		<div class="container-fluid">
			<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppointmentScheduler</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link @(c=="Home" && a=="Index" ? "active text-light" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link @(c=="Customer" && a=="Customers" ? "active text-light" : "")" asp-area="" asp-controller="Customer" asp-action="Customers">Customers</a>
					</li>
					<li class="nav-item">
						<a class="nav-link @(c=="Appointment" && a=="Add" ? "active text-light" : "")" asp-area="" asp-controller="Appointment" asp-action="Add">Appointments</a>
					</li>
				</ul>
				<div class="d-flex">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Area</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</nav>
	</header>

<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

@RenderSection("scripts", required: false);